{
  "manifest_version": 3,
  "name": "Astra QA Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for quality assurance analysis.",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
    }
  }
}